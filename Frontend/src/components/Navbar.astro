---
import {
    SignInButton,
    SignedIn,
    SignedOut,
    UserButton,
} from "@clerk/astro/components";
const currentPath = Astro.url.pathname;
---

<header class="header">
    <nav class="navbar">
        <div class="logo">
            <a href="/"><img src="/logo.png" class="logo-img" /></a>
        </div>
        <!-- Botón hamburguesa CSS only -->
        <input type="checkbox" id="menu-toggle" class="menu-toggle" hidden />
        <label for="menu-toggle" class="hamburger" aria-label="Abrir menú">
            <span></span>
            <span></span>
            <span></span>
        </label>
        <div class="nav-links">
            <a href="/" class={currentPath === "/" ? "active" : ""}>Inicio</a>
            <div class="dropdown-btn">
                <button
                    id="indicaciones-menu-button"
                    aria-haspopup="true"
                    aria-expanded="false"
                    class="indicaciones-btn">
                    Indicaciones
                    <svg
                        aria-hidden="true"
                        height="16"
                        viewBox="0 0 16 16"
                        width="16"
                        class="octicon octicon-triangle-down"
                        style="vertical-align: middle; margin-left: 4px;">
                        <path
                            d="m4.427 7.427 3.396 3.396a.25.25 0 0 0 .354 0l3.396-3.396A.25.25 0 0 0 11.396 7H4.604a.25.25 0 0 0-.177.427Z"
                        ></path>
                    </svg>
                </button>
                <div class="dropdown-content-btn">
                    <a href="/moverte">Moverte en San Rafael</a>
                    <a href="/llegar">Llegar a San Rafael</a>
                </div>
            </div>
            <a
                href="/emergencias"
                class={currentPath === "/emergencias"
                    ? "active emergencias"
                    : "emergencias"}>Emergencias</a
            >
            <a
                href="/servicios"
                class={currentPath === "/servicios" ? "active" : ""}
                >Servicios</a
            >
            <a
                href="/hospedaje"
                class={currentPath === "/hospedaje" ? "active" : ""}
                >Hospedaje</a
            >
            <a href="/info" class={currentPath === "/info" ? "active" : ""}
                >Informacion util</a
            >
        </div>
        <div class="nav-auth">
            <SignedOut>
                <SignInButton mode="modal" />
            </SignedOut>
            <SignedIn>
                <UserButton />
            </SignedIn>
        </div>
    </nav>
</header>
<style>
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: rgba(255, 255, 255, 0.8);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        min-width: unset;
        max-width: unset;
        backdrop-filter: blur(6px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        z-index: 1000;
        gap: 2rem;
    }
    .logo {
        flex: 0 0 auto;
        display: flex;
        align-items: center;
        margin-right: 0;
    }
    .logo-img {
        max-width: 120px;
        width: 100%;
        height: auto;
        object-fit: contain;
        transition: max-width 0.2s;
        display: block;
    }
    .nav-auth {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex: 0 0 auto;
        min-width: 48px;
        margin-right: 4rem;
    }
    @media (max-width: 600px) {
        .logo-img {
            max-width: 80px;
        }
        .navbar {
            padding: 0.5rem 1rem;
            gap: 1rem;
        }
        .nav-auth {
            margin-right: 0.5rem;
        }
    }
    .nav-links {
        display: flex;
        gap: 1.5rem;
        flex: 1;
        justify-content: right;
    }
    .nav-links a {
        text-decoration: none;
        color: #333;
        font-weight: 500;
        transition: color 0.2s;
    }
    .nav-links a:hover {
        color: #4baf49;
    }
    .nav-links a.emergencias {
        color: #ef4444;
        font-weight: bold;
    }
    .nav-links a.emergencias:hover {
        color: #cc0000;
    }
    .nav-links a.active {
        color: #4baf49;
    }
    .hamburger {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 40px;
        height: 40px;
        cursor: pointer;
        z-index: 1100;
        margin-left: 1rem;
    }
    .hamburger span {
        display: block;
        width: 26px;
        height: 3px;
        background: #333;
        margin: 4px 0;
        border-radius: 2px;
        transition: 0.3s;
    }
    .menu-toggle {
        display: none;
    }
    @media (max-width: 900px) {
        .nav-links {
            position: fixed;
            top: 70px;
            right: 0;
            background: #fff;
            flex-direction: column;
            gap: 1.5rem;
            width: 70vw;
            max-width: 300px;
            height: 100vh;
            align-items: flex-start;
            justify-content: flex-start;
            padding: 2rem 1.5rem;
            box-shadow: -2px 0 8px rgba(0, 0, 0, 0.08);
            transform: translateX(100%);
            transition: transform 0.3s;
            z-index: 1050;
            display: flex;
        }
        .menu-toggle:checked ~ .hamburger + .nav-links,
        .menu-toggle:checked + .hamburger + .nav-links,
        .nav-links.open {
            transform: translateX(0);
        }
        .navbar {
            gap: 0.5rem;
        }
        .hamburger {
            display: flex;
        }
        .nav-auth {
            margin-right: 0;
        }
    }
    .dropdown-btn {
        position: relative;
        display: inline-block;
    }
    .indicaciones-btn {
        background: none;
        border: none;
        color: #333;
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        padding: 0;
        transition: color 0.2s;
    }
    .indicaciones-btn:hover {
        color: #4baf49;
    }
    .dropdown-content-btn {
        display: none;
        position: absolute;
        background: #fff;
        min-width: 200px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        z-index: 2000;
        border-radius: 6px;
        padding: 0.5rem 0;
        top: 100%;
        left: 0;
    }
    .dropdown-content-btn a {
        color: #333;
        padding: 0.5rem 1.2rem;
        text-decoration: none;
        display: block;
        transition: background 0.2s;
    }
    .dropdown-content-btn a:hover {
        background: #f0f0f0;
        color: #4baf49;
    }
    .dropdown-btn:hover .dropdown-content-btn,
    .dropdown-btn:focus-within .dropdown-content-btn {
        display: block;
    }
</style>

<script>
    // Asegurar que el DOM esté cargado
    document.addEventListener("DOMContentLoaded", function () {
        const menuToggle = document.getElementById(
            "menu-toggle"
        ) as HTMLInputElement;
        const hamburger = document.querySelector(".hamburger") as HTMLElement;
        const navLinks = document.querySelector(".nav-links") as HTMLElement;

        if (hamburger && navLinks) {
            hamburger.addEventListener("click", function () {
                navLinks.classList.toggle("open");
                if (menuToggle) {
                    menuToggle.checked = !menuToggle.checked;
                }
            });
        }

        // Cerrar menú al hacer click fuera
        document.addEventListener("click", function (e) {
            const target = e.target as HTMLElement;
            if (
                hamburger &&
                navLinks &&
                target &&
                !hamburger.contains(target) &&
                !navLinks.contains(target)
            ) {
                navLinks.classList.remove("open");
                if (menuToggle) menuToggle.checked = false;
            }
        });

        // También manejar cuando se hace click en un enlace del menú para cerrarlo
        if (navLinks) {
            const navLinkElements = navLinks.querySelectorAll("a");
            navLinkElements.forEach((link) => {
                link.addEventListener("click", function () {
                    navLinks.classList.remove("open");
                    if (menuToggle) menuToggle.checked = false;
                });
            });
        }
    });
</script>
