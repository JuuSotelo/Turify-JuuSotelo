</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Mejorar navegación por teclado en las tarjetas de emergencia
        const emergencyCards = document.querySelectorAll('.card-emergencia');
        
        emergencyCards.forEach((card: Element) => {
            const cardElement = card as HTMLElement;
            
            // Permitir activación con Enter o Espacio
            cardElement.addEventListener('keydown', function(e: KeyboardEvent) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    // Encontrar el primer enlace en la tarjeta
                    const link = cardElement.querySelector('a');
                    if (link) {
                        link.click();
                    }
                }
            });
            
            // Mejorar el focus visual
            cardElement.addEventListener('focus', function() {
                cardElement.style.outline = '2px solid #dc2626';
                cardElement.style.outlineOffset = '2px';
            });
            
            cardElement.addEventListener('blur', function() {
                cardElement.style.outline = '';
                cardElement.style.outlineOffset = '';
            });
        });
    });
</script>
