  <div class="carousel-wrapper">
    <button class="carousel-arrow left" id="prevLugar" aria-label="Anterior">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polyline points="15 18 9 12 15 6"/></svg>
    </button>
    
    <div class="carousel-track" id="carouselTrack">
      <!-- Cada tarjeta -->
      <div class="carousel-card">
        <img src="/carrusel/canon-atuel.jpg" alt="Cañón del Atuel" />
        <h4>Cañón del Atuel</h4>
        <p>Paisajes únicos y deportes de aventura.</p>
      </div>
      <div class="carousel-card">
        <img src="/carrusel/valle-grande.jpg" alt="Valle Grande" />
        <h4>Valle Grande</h4>
        <p>Ideal para rafting y actividades acuáticas.</p>
      </div>
      <div class="carousel-card">
        <img src="/carrusel/bodega-abeja.jpg" alt="Bodega La Abeja" />
