---
import MainLayout from "../layouts/MainLayout.astro";
import FiltroDistrito from "../components/FiltroUbicacion.astro";
import getToken from "../utils/getToken";
import { apiFetch } from "../utils/api";

// Obtener el token de autenticación
const token = getToken();

// Definir tipos TypeScript
interface Empresa {
    id: string;
    nombre: string;
    descripcion: string | null;
    email: string | null;
    telefono: string | null;
    sitio_web: string | null;
    direccion: string;
    latitud: number | null;
    longitud: number | null;
    img_url: string | null;
    categoria_id: string | null;
    created_at: string;
    distrito?: string;
}

interface Categoria {
    id: string;
    nombre: string;
}

// Función para obtener las categorías desde el backend
async function obtenerCategorias(): Promise<Categoria[]> {
    try {
        const response = await apiFetch("/categorias");
        if (!response.ok) {
            throw new Error("Error al obtener categorías");
        }
        return await response.json();
    } catch (error) {
        console.error("Error al obtener categorías:", error);
        return [];
    }
}

// Función para obtener las empresas desde el backend
async function obtenerEmpresas(): Promise<Empresa[]> {
    try {
        const response = await apiFetch("/empresas");
        if (!response.ok) {
            throw new Error("Error al obtener empresas");
        }
        return await response.json();
    } catch (error) {
        console.error("Error al obtener empresas:", error);
        return [];
    }
}

// Función para obtener los distritos únicos filtrados por categoría
async function obtenerDistritos(categoriaId?: string): Promise<string[]> {
    try {
        let endpoint = "/empresas/distritos";
        if (categoriaId) {
            endpoint += `?categoria_id=${categoriaId}`;
        }
        const response = await apiFetch(endpoint);
        if (!response.ok) {
            throw new Error("Error al obtener distritos");
        }
        return await response.json();
    } catch (error) {
        console.error("Error al obtener distritos:", error);
        return [];
    }
}

// Obtener datos
const categorias = await obtenerCategorias();
const empresas = await obtenerEmpresas();

// Definir categorías de emergencia
const categoriasEmergencia = [
    "cuartel de bomberos",
    "hospital",
    "emergencias",
    "policía",
    "policia",
    "ambulancia",
];

// Filtrar solo las categorías de emergencia
const categoriasEmergenciaFiltradas = categorias.filter((categoria) =>
    categoriasEmergencia.some((emergencia) =>
        categoria.nombre.toLowerCase().includes(emergencia)
    )
);

// Obtener parámetros de la URL
const url = new URL(Astro.request.url);
const categoriaId = url.searchParams.get("categoria");

// Obtener distritos filtrados por categoría de emergencia
const distritos = await obtenerDistritos(categoriaId || undefined);

// Filtrar empresas por categoría de emergencia
let empresasFiltradas = empresas.filter((empresa) => {
    if (!empresa.categoria_id) return false;
    
    const categoria = categoriasEmergenciaFiltradas.find(
        (cat) => cat.id === empresa.categoria_id
    );
    return categoria !== undefined;
});

// Filtrar por categoría específica si se especifica
if (categoriaId) {
    empresasFiltradas = empresasFiltradas.filter(
        (empresa) => empresa.categoria_id === categoriaId
    );
}

// Filtrar por distrito si se especifica
const distritoFiltro = url.searchParams.get("distrito");
const distritosSeleccionados = distritoFiltro
  ? distritoFiltro.split(",")
  : [];
if (distritosSeleccionados.length > 0) {
    empresasFiltradas = empresasFiltradas.filter((empresa) =>
        distritosSeleccionados.some((d) => empresa.distrito && empresa.distrito.toLowerCase().includes(d.toLowerCase()))
    );
}

// Obtener información de la categoría si se filtra
const categoriaSeleccionada = categoriaId
    ? categoriasEmergenciaFiltradas.find((cat) => cat.id === categoriaId)
    : null;
---

<link rel="stylesheet" href="/src/style/emergencias.css">

<MainLayout title="Servicios de Emergencia - Turify">
    <section class="emergencias-section">
        <div class="container">
            <div class="header">
                <h1>
                    {categoriaSeleccionada
                        ? `Servicios de ${categoriaSeleccionada.nombre}`
                        : "Servicios de Emergencia"}
                </h1>
                <p class="subtitle">
                    {categoriaSeleccionada
                        ? `Encuentra servicios de ${categoriaSeleccionada.nombre.toLowerCase()} en San Rafael`
                        : "Acceso rápido a todos los servicios de emergencia disponibles en San Rafael, Mendoza"}
                </p>
                {categoriaSeleccionada && (
                    <a href="/emergencias" class="btn-ver-todas">Ver todos los servicios de emergencia</a>
                )}
            </div>

            {/* Filtro de distrito */}
            {distritos.length > 0 && (
                <FiltroDistrito 
                    distritos={distritos}
                    distritoSeleccionado={distritosSeleccionados}
                    placeholder="Filtrar por distrito..."
                />
            )}

            {empresasFiltradas.length === 0 ? (
                <div class="no-empresas">
                    <h3>No se encontraron servicios de emergencia</h3>
                    <p>
                        {categoriaSeleccionada
                            ? `No hay servicios registrados en la categoría "${categoriaSeleccionada.nombre}"`
                            : distritoFiltro
                            ? `No hay servicios de emergencia en el distrito "${distritoFiltro}"`
                            : "No hay servicios de emergencia registrados en este momento"}
                    </p>
                    <a href="/emergencias" class="btn-volver">Volver a todos los servicios</a>
                </div>
            ) : (
                <div class="empresas-grid">
                    {empresasFiltradas.map((empresa) => {
                        const categoria = categoriasEmergenciaFiltradas.find(
                            (cat) => cat.id === empresa.categoria_id
                        );
                        return (
                            <div 
                                class="empresa-card emergencia-card"
                                data-direccion={empresa.direccion}
                                data-categoria-id={empresa.categoria_id}
                            >
                                <div class="imagen-container">
                                    {empresa.img_url ? (
                                        <img
                                            src={empresa.img_url}
                                            alt={empresa.nombre}
                                            onerror="this.style.display='none'; this.parentElement.querySelector('.placeholder').style.display='flex';"
                                        />
                                    ) : null}
                                    <div class="placeholder">
                                        <svg
                                            width="60"
                                            height="60"
                                            viewBox="0 0 60 60"
                                            fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
