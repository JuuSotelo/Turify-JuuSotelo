---
import MainLayout from "../layouts/MainLayout.astro";
import RecommendedCarousel from "../components/RecommendedCarousel.astro";
import Categorias from "../components/Categorias.astro";
import Historia from "../components/Historia.astro";
import Emergencias from "../components/Emergencias.astro";
const { title } = Astro.props;
---

<MainLayout title={title}>
    <RecommendedCarousel />
    <Categorias />
    <Historia />
    <Emergencias />
</MainLayout>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: "Segoe UI", Arial, sans-serif;
        background: #f8faf7;
        color: #222;
    }
    main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }
    .activity-button {
        background: #2e6c4d;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
        cursor: pointer;
        transition:
            background 0.2s,
            box-shadow 0.2s;
        text-decoration: none;
    }
    .activity-button:hover {
        background: white;
        color: #2e6c4d;
        box-shadow: 0 2px 8px rgba(46, 108, 77, 0.1);
        border: 1px solid #2e6c4d;
        border-color: #2e6c4d;
    }
    .activity-button a {
        color: inherit;
        text-decoration: none;
        display: block;
        width: 100%;
        height: 100%;
    }
    .activity-button-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 1rem;
        margin-top: -3rem;
    }
    .hero {
        position: relative;
        width: 100%;
        height: 180px;
        overflow: hidden;
    }
    .hero-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        filter: brightness(0.7);
    }
    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        text-align: center;
    }
    .hero-text h1 {
        font-size: 2.5rem;
        margin: 0;
        font-weight: bold;
        letter-spacing: 2px;
    }
    .hero-text h2 {
        font-size: 1.3rem;
        margin: 0;
        font-weight: 400;
    }
    .categorias {
        margin-bottom: 2rem;
        text-align: center;
    }
    .categorias h3 {
        color: #2e6c4d;
        margin-bottom: 1rem;
    }
    .cards {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        width: 220px;
        padding: 1rem;
        text-align: center;
        transition: box-shadow 0.2s;
    }
    .card img {
        width: 100%;
        height: 110px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }
    .card h4 {
        margin: 0.5rem 0 0.3rem 0;
        color: #2e6c4d;
    }
    .emergencias {
        background: #ffeaea;
        border-radius: 12px;
        padding: 1.5rem 1rem;
        margin-bottom: 2rem;
        text-align: center;
    }
    .emergencias h3 {
        color: #d32f2f;
        margin-bottom: 1rem;
    }
    .badge {
        background: #d32f2f;
        color: #fff;
        border-radius: 8px;
        padding: 0.2em 0.7em;
        font-size: 0.8em;
        margin-left: 0.5em;
        vertical-align: middle;
    }
    .emergencias-cards {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    .emergencia-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
        width: 180px;
        padding: 1rem;
        text-align: center;
    }
    .emergencia-card h4 {
        margin: 0.3rem 0;
        color: #d32f2f;
    }
    .contacto {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        background: #fff;
        border-radius: 12px;
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        justify-content: space-between;
    }
    .contacto-form {
        flex: 2;
        min-width: 220px;
    }
    .contacto-form h3 {
        margin-top: 0;
        color: #2e6c4d;
    }
    .contacto-form form {
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
    }
    .contacto-form input,
    .contacto-form textarea {
        padding: 0.6rem;
        border: 1px solid #cde3d2;
        border-radius: 6px;
        font-size: 1rem;
        resize: none;
    }
    .contacto-form button {
        background: #2e6c4d;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.7rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
    }
    .contacto-form button:hover {
        background: #24543a;
    }
    .contacto-info {
        flex: 1;
        min-width: 180px;
        background: #eaf7f0;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
        height: fit-content;
    }
    .contacto-info h4 {
        margin-top: 0;
        color: #2e6c4d;
    }
    .contacto-info ul {
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 1rem;
    }
    .contacto-info li {
        margin-bottom: 0.5rem;
    }

    @media (max-width: 900px) {
        .cards,
        .emergencias-cards,
        .contacto {
            flex-direction: column;
            align-items: center;
        }
    }

    .nav-auth button,
    .clerk-sign-in-button {
        background: #2e6c4d;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition:
            background 0.2s,
            box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(46, 108, 77, 0.08);
    }
    .nav-auth button:hover,
    .clerk-sign-in-button:hover {
        background: #24543a;
    }
</style>
